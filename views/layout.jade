doctype html
html
	head
		title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
		script(src='/javascripts/jquery-3.3.1.slim.min.js')
		script(src='/javascripts/bootstrap.min.js')

	body
		nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
			a.navbar-brand(href='/posts') Blog
			button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
				span.navbar-toggler-icon
			#navbarsExampleDefault.collapse.navbar-collapse
				ul.navbar-nav.mr-auto
					if user
						li.nav-item(class=(title == 'Posts' ? 'active' : ''))
							a.nav-link(href='/posts/addpost') Post
						li.nav-item(class=(title == 'Categories' ? 'active' : ''))
							a.nav-link(href='/categories') Category		
					if !user
						li.nav-item(class=(title == 'Register' ? 'active' : ''))
							a.nav-link(href='/users/register') Register
						li.nav-item(class=(title == 'Login' ? 'active' : ''))
							a.nav-link(href='/users/login') Login
						
			.navbar-collapse.collapse.w-100.order-3.dual-collapse2
				ul.navbar-nav.ml-auto
					if user
						li.nav-item
							a.nav-link(href='/users/logout') Logout
		main.container(role='main')
			!= messages()
			block content   